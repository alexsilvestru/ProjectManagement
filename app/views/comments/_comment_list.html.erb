<div class="mb-3 col-md">
  <% @ticket.sort_comments.each do |comment| %>
    <div class="card bg-yellow-comment mb-3">
      <p class="card-header">Posted by <%= comment.user.username%> <%= time_ago_in_words(comment.created_at) %> ago </p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <p class="card-text"><%= comment.body %></p>
        </li>
      </ul>
    </div>
  <% end %>
</div>
