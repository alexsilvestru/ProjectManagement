<%= render 'shared/content_title', title: 'Ticket: ' + @ticket.name %>

<div class="card bg-yellow-card mb-5 d-flex justify-content-center mr-2 ml-2">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <h6 class="card-title">Body</h6>
      <p class="card-text"><%= @ticket.body %></p>
    </li>
    <li class="list-group-item">
      <h6 class="card-title">User</h6>
      <p class="card-text"><%= @ticket.user.username %></p>
    </li>
    <li class="list-group-item">
      <h6 class="card-title">Status</h6>
      <p class="card-text"><%= @ticket.status %></p>
    </li>
  </ul>
  <div class="card-footer">
    <small class="text-muted">Last updated <%= time_ago_in_words(@ticket.updated_at)%></small>
  </div>
</div>

<h4 class="mb-4 ml-2 mr-2">Comments:</h4>

<% if logged_in? %>
  <%= render 'comments/form' %>
<% end %>

<%= render 'comments/comment_list' %>
